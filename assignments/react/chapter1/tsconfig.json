    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es5",
    "sourceMap": false,
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
